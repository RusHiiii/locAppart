{% extends 'shared/layout/base_with_image.html.twig' %}

{% block title %}Loc'Appart - Procédure de changement de mot de passe{% endblock %}
{% block description %}Changez facilement le mot de passe de votre compte avant de pouvoir utiliser toutes les fonctionnalités du site et gérer vos biens !{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('build/parametre.css') }}">
{% endblock %}

{% block content %}
    <article class="s-12 l-8 center">
        <h1>Mot de pase oublié</h1>
        <p class="subtitile_presentation">Procédure de changement de mot de passe</p>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group form-custom">
            {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                {% if form_errors(form.email) %}
                    <div class="row">
                        <div class="error_form">
                            <span>{{ form_errors(form.email) }}</span>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </article>
{% endblock %}
