<div class="cst">
    <div id="box_{{ idx }}" class="box" style="display: none">
        <p>Photo {{ idx }}</p>
        {{ form_widget(form.file, {'attr': {'class': 'inputfile inputfile-4'}}) }}
        <label for="appartment_ressources_{{ idx }}_file">
        <span class="fa-stack fa-lg">
          <i class="fa fa-camera fa-stack-2x" aria-hidden="true"></i>
          <i class="fa fa-plus-circle fa-stack-1x" aria-hidden="true"></i>
        </span>
        </label>
    </div>
    <div class="box_img">
        {% if form.vars.value.file.filename is defined %}
            <img id="img_{{ idx }}" class="img_file" src="/uploads/{{ form.vars.value.file.filename }}"/>
        {% else %}
            <img id="img_{{ idx }}" class="img_file" src="/uploads/{{ form.vars.value.file }}"/>
        {% endif %}

        <a id="{{ idx }}"><i id="circle_{{ idx }}" class="fa fa-times-circle" aria-hidden="true"></i></a>
    </div>
</div>
{% if form_errors(form.file) %}
    <div class="row" style="position:absolute;">
        <div class="error_form">
            <span>{{ form_errors(form.file) }}</span>
        </div>
    </div>
{% endif %}
