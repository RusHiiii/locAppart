{% extends 'shared/layout/base_with_image.html.twig' %}

{% block title %}Loc'Appart - Connexion{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('build/login.css') }}">
{% endblock %}

{% block content %}
    <article class="s-12 l-8 center">
        <h2>Identifiez-vous</h2>
        <p class="subtitile_presentation">Connecter vous pour avoir accès aux fonctionnalitées du site</p>
        <form class="form-horizontal" method="POST" id="login_form">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'messages') }}</div>
            {% endif %}
            <div class="form-group form-custom">
                <label class="col-sm-4 control-label" for="inputEmail">Email:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" required autofocus>
                </div>
            </div>
            <div class="form-group form-custom has-feedback">
                <label for="inputPassword" class="col-sm-4 control-label">Mot de passe:</label>
                <div class="col-sm-8">
                    <input id="pswdBox" type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required><span id="eye" tabindex="100" class="add-on input-group-addon span_paswd" ><i class="fa fa-eye"></i></span>
                    <div class="info">
                        <div class="forgotten">
                            <a href="{{ path('app_forgotten_password') }}">Mot de passe oublié ?</a>
                        </div>
                        <div class="remember">
                            <input type="checkbox" name="_remember_me"> Rester connecté
                        </div>
                    </div>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary validate">Valider</button>
        </form>
    </article>
    <article class="s-12 l-8 center">
        <div class="inscription_site">
            <h2>Vous avez un compte ?</h2>
            <p class="subtitile_presentation">Pour vous connecter plus rapidement sur le site</p>
            <a href="{{ path("connect_google") }}" class="link-api">
                <button type="button" class="google-button">
                    <span class="google-button__icon"><i class="fa fa-google fa-2x"></i></span>
                    <span class="google-button__text">Se connecter avec Google</span>
                </button>
            </a>
            <a href="#" class="link-api">
                <button type="button" class="facebook-button" disabled>
                    <span class="facebook-button__icon"><i class="fa fa-facebook fa-2x"></i></span>
                    <span class="facebook-button__text">Se connecter avec Facebook</span>
                </button>
            </a>
        </div>
    </article>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('build/login.js') }}"></script>
{% endblock %}
