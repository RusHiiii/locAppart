{% extends 'base.html.twig' %}

{% block title %}Loc'Appart - Inscription{% endblock %}

{% block style %}
  <link rel="stylesheet" href="{{ asset('build/parametre.css') }}">
{% endblock %}

{% block content %}
<section>
       {% include('Shared/elements/background.html.twig') %}
       <div class="content_login">
          <div class="line">
             <div class="margin-bottom">
                <div class="margin">
                   <article class="s-12 l-8 center">
                      <h2>Inscription au site</h2>
                      <p class="subtitile_presentation">Inscrivez vous pour avoir accès aux fonctionnalitées du site</p>
                       {% for message in app.flashes('notice') %}
                           <div class="alert alert-info" role="alert">
                               {{ message }}
                           </div>
                       {% endfor %}

                      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                          {{ form_errors(form) }}

                          <div class="form-group form-custom">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-8">
                              {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                              {% if form_errors(form.email) %}
                                <div class="row">
                                  <div class="error_form">
                                    <span>{{ form_errors(form.email) }}</span>
                                  </div>
                                </div>
                              {% endif %}
                            </div>
                          </div>

                          <div class="form-group form-custom">
                            {{ form_label(form.firstname, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-8">
                              {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                              {% if form_errors(form.firstname) %}
                                <div class="row">
                                  <div class="error_form">
                                    <span>{{ form_errors(form.firstname) }}</span>
                                  </div>
                                </div>
                              {% endif %}
                            </div>
                          </div>

                          <div class="form-group form-custom">
                            {{ form_label(form.lastname, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-8">
                              {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                              {% if form_errors(form.lastname) %}
                                <div class="row">
                                  <div class="error_form">
                                    <span>{{ form_errors(form.lastname) }}</span>
                                  </div>
                                </div>
                              {% endif %}
                            </div>
                          </div>

                          <div class="form-group form-custom">
                            {{ form_label(form.gender, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-8">
                              <div class="radio-gender">
                                {{ form_widget(form.gender, {'attr': {'class': ''}}) }}
                                {% if form_errors(form.gender) %}
                                  <div class="row">
                                    <div class="error_form">
                                      <span>{{ form_errors(form.gender) }}</span>
                                    </div>
                                  </div>
                                {% endif %}
                              </div>
                            </div>
                          </div>

                          <div class="form-group form-custom">
                            {{ form_label(form.password.first, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-8">
                              {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                              <span id="eye" tabindex="100" class="add-on input-group-addon span_paswd" ><i class="fa fa-eye"></i></span>
                              {% if form_errors(form.password.first) %}
                                <div class="row">
                                  <div class="error_form">
                                    <span>{{ form_errors(form.password.first) }}</span>
                                  </div>
                                </div>
                              {% endif %}
                              <ul class="verification_mdp_inscription">
                                <li>Pour votre sécurité, utilisez un mot de passe contenant :</li>
                                <li>• Minimun 6 caractères</li>
                                <li>•  Et des caractères spéciaux parmi =/+|.-_~^@!#$%?*€,;:)</li>
                              </ul>
                            </div>
                          </div>

                          <div class="form-group form-custom">
                            {{ form_label(form.password.second, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-8">
                              {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                              <span id="eyeBox2" tabindex="100" class="add-on input-group-addon span_paswd" ><i class="fa fa-eye"></i></span>
                              {% if form_errors(form.password.second) %}
                                <div class="row">
                                  <div class="error_form">
                                    <span>{{ form_errors(form.password.second) }}</span>
                                  </div>
                                </div>
                              {% endif %}
                            </div>
                          </div>

                          {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

                          {{ form_rest(form) }}
                      {{ form_end(form) }}
                    </article>
                </div>
             </div>
          </div>
       </div>
    </section>
{% endblock %}

{% block javascript %}
  <script type="text/javascript" src="{{ asset('build/parametre.js') }}"></script>
{% endblock %}
