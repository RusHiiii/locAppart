{% extends 'base.html.twig' %}

{% block title %}Loc'Appart - Mes annonce{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('build/gestion.css') }}">
{% endblock %}

{% block content %}
    <section>
        {% include('Shared/elements/background.html.twig') %}
        <div class="content_login">
            <div class="line">
                <div class="margin-bottom">
                    <div class="margin">
                        <article class="s-12 l-12 center">
                            <h2>Tableau de bord</h2>
                            <p class="subtitile_presentation">Acceder à l'ensemble de vos annonces</p>
                            <div class="lines">
                                <div class="gestion-box">
                                    <aside class="lg-side">
                                        <form method="POST" >
                                            <div class="gestion-head">
                                                <h3>Gestion des annonces</h3>
                                            </div>
                                            <div class="gestion-body">
                                                <div class="gestion-option">
                                                    <div class="gestion-text">
                                                        <div class="gestion-text-icon">
                                                            <span class="fa-stack ">
                                                              <i class="fa fa-circle fa-stack-2x"></i>
                                                              <strong class="fa-stack-1x calendar-text">{{ count }}</strong>
                                                              <i class="fa fa-caret-down"></i>
                                                            </span>
                                                        </div>
                                                        <h3> annonce(s) sur le site</h3>
                                                    </div>
                                                </div>
                                                {% for message in app.flashes('notice') %}
                                                    <div class="alert alert-info" role="alert">
                                                        {{ message }}
                                                    </div>
                                                {% endfor %}

                                                {% if appartments is empty %}
                                                    <div class="alert alert-info" role="alert">Vous n'avez aucune annonce.</div>
                                                {% endif %}

                                                {% for appartment in appartments %}
                                                    <div class="gestion-annonce-ensemble">
                                                        <table class="no_border">
                                                            <tr>
                                                                <td class="td_date">
                                                                    <div class="gestion-date">
                                                                        <span>{{ appartment.date|date('Y-m-d') }}</span>
                                                                    </div>
                                                                </td>
                                                                <td class="td_body">
                                                                    <div class="gestion-img">
                                                                        <img src="/uploads/{{ appartment.ressources|first }}">
                                                                    </div>
                                                                    <div class="gestion_main_content">

                                                                        <h3>{{ appartment.title }} {{ appartment.city.name }}</h3>
                                                                        <p class="gestion_main_content_p">Type de bien: {{ appartment.type.name }}</p>
                                                                        <p class="gestion_main_content_p">Référence: {{ appartment.reference }}</p>
                                                                        <p >Status: <strong>{{ appartment.status.name }}</strong></p>
                                                                        <span class="app_price">A partir de <strong>{{ appartment.prices|price(appartment.prices) }}€</strong></span>
                                                                    </div>
                                                                </td>
                                                                <td class="td_btn">
                                                                    <a class="btn btn-primary btn_result delete"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                                                                    <a href="{{ path('app_announcement_edit', { 'id': appartment.id }) }}" class="btn btn-primary btn_result edit"><span class="glyphicon glyphicon-edit"></span> Editer</a>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                    <hr>
                                                {% endfor %}
                                            </div>
                                        </form>
                                    </aside>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

